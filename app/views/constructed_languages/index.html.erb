<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-warning">Constructed Languages</h1>
    </div>
  </div>
</div>

<br>

<div class="row">
<% @constructed_languages.each do |cl| %>
<div class="col-lg-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= cl.name %></h3>
    </div>
    <div class="panel-body">
      <%= link_to "View", constructed_language_path( cl ) %>
      <%= link_to "Edit", edit_constructed_language_path( cl ) %>
      <%= link_to 'Delete', cl, :method => :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
<% end %>
</div>

<br>
<h3><%= link_to "Create New Language", new_constructed_language_path %></h3>
