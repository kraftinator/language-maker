<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-warning"><%= @word.text.upcase %></h1>
    </div>
  </div>
</div>

<% if @word.natural_words.any? %>
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Language</th>
            <th>Text</th>
            <th>Original Text</th>
          </tr>
        </thead>
        <tbody>
          <% @word.natural_words.sort_by {|n| [n.text.length, n.text] }.each do |nw| %>
            <tr>
              <td><%= nw.natural_language.name %></td>
              <td><%= nw.text %>
              <td><%= nw.original_text %></td>
            </tr>  
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>
<% else %>
  <h3>Word translations have not been imported.</h3>
<% end %>
<br>
<%= link_to 'Import', import_words_path(@word), class: "btn btn-info"%>
  

