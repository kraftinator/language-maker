<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-warning">Words</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <h3><%= link_to "Add Word", new_word_path %></h3>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <table class="table table-striped table-hover">
      <tbody>
        <% @words.each do |word| %>
          <tr>
            <td class="lead"><b><%= link_to word.text, word_path( word ) %></b></td>
            <td><%= link_to "Edit", edit_word_path( word ) %></td>
            <td><%= link_to 'Delete', word, :method => :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
  </div>  
</div>