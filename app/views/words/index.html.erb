<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-warning">Words</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <%= link_to 'Add Word', new_word_path, class: "btn btn-info"%>
  </div>
</div>
<br>
<div class="row">
  <div class="col-lg-6">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Text</th>
          <th>Language</th>
          <th>Type</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @words.each do |word| %>
          <tr>
            <td><%= link_to word.text.upcase, word_path( word ), class: "btn btn-primary btn-xs"%></td>
            <td><%= word.natural_language.name %>
            <td><%= word.word_type.name %></td>
            <td><%= link_to edit_word_path( word ) do %><span class="glyphicon glyphicon-pencil"></span><% end %></td>
            <td><%= link_to word, :method => :delete, data: { confirm: 'Are you sure?' } do %><i class="glyphicon glyphicon-remove" style="color: red;"></i><% end %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
  </div>  
</div>